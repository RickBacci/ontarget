.row
  .col-md-6.col-md-offset-3
    .list-group
      %h3.list-group-item.color-blue.head
        Your Repositories
        .pull-right
          %input#search_repos.text-input{:type => "text", placeholder: 'Search'}
      - @repos.each do |repo|
        - if current_user_added_repo(repo.name) && repo.has_issues
          .list-group-item
            = link_to repo.name, repo_path(repo.name), class: "#{repo.name}-added btn btn-default repo-btn focus"
            = link_to '-', repo_path(repo.name), method: 'delete', class: "#{repo.name}-added #{repo.name}-delete-btn btn btn-default focus repo-choice"
        - else
          - if repo.has_issues
            .list-group-item
              = link_to repo.name, create_repo_path(repo.name, repo.has_issues.to_s), method: :post, class: "#{repo.name} btn btn-default repo-btn"
              = link_to '+', create_repo_path(repo.name, repo.has_issues.to_s), method: 'post', class: "#{repo.name}-add-btn btn btn-default btn-large repo-choice"
          - else
            .list-group-item
              = link_to repo.name, activate_repo_issues_path(repo.name), method: :post, class: "#{repo.name}add-btn btn btn-default repo-btn disabled"
              = link_to '+', activate_repo_issues_path(repo.name), method: 'post', class: "#{repo.name}-add-btn btn btn-default btn-large repo-choice", :rel => "tooltip", :title => "Activate Issues"

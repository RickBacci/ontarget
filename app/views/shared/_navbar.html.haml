%nav.navbar.navbar-default.navbar-inverse
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed{"aria-expanded" => "false", "data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      - if current_user
        = link_to "OnTarget", repos_path, class: 'navbar-brand'
      - else
        = link_to "OnTarget", root_path, class: 'navbar-brand'
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav
        - if current_user
          %li
            = link_to 'View Repositories', repos_path
          %li
            = link_to 'Add Repository', new_repo_path
        - if current_user && @repo
          %li
            = link_to 'New Issue', new_repo_issue_path(@repo.id)
          %li
          %span.sr-only
            Toggle Navigation
      %ul.nav.navbar-nav.navbar-right
        %li
          -if current_user
            =link_to "Logout", logout_path, id: 'logout'
          -else
            =link_to 'Login with Github', login_path

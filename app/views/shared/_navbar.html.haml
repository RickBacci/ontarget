%nav.navbar.navbar-fixed-top.navbar-inverse
  .container-fluid
    .navbar-header
      %button.navbar-toggle{"data-toggle" => "collapse", "data-target" => "#ontarget-navbar"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "OnTarget", root_path, class: 'navbar-brand'
    #ontarget-navbar.collapse.navbar-collapse
      - if current_user
        %form.navbar-form.navbar-left{:role => "search"}
          .form-group
            %input#search_repos.form-control{ :placeholder => "Search for a Repo", :type => "text" }
        = render partial: 'shared/dropdown_repo_list', locals: { repos: @repos }
        %ul.nav.navbar-nav
          - if current_repo
            %li
              = link_to 'New Issue', new_repo_issue_path(current_repo) unless current_repo.empty?
        %span.sr-only
          Toggle Navigation
        %ul.nav.navbar-nav.navbar-right
          %li
            =link_to "Logout", logout_path, id: 'logout'
      - else
        %ul.nav.navbar-nav.navbar-right
          %li
            =link_to 'Login with Github', login_path


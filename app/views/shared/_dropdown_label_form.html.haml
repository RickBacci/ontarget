.dropdown-menu.issue-labels-dropdown-menu{"aria-labelledby" => "dropdown-#{issue_number}" }
  = form_tag update_issue_labels_path(issue_number),
    class: "label-check-boxes well form" ,method: :post do
    - @labels.each do |label|
      .label-box-dropdown{ class: "checkbox btn btn-xs", style: "background-color:\##{label.color}" }
        = check_box_tag "updates[labels][]", [label.name], has_label?(issue_labels, label.name)
        = label.name
    %button.btn.pull-right.btn-default.btn-xs.label-btn{:type => "submit"} Update

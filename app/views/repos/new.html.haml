.row
  .col-md-6.col-md-offset-3
    %h3.text-center.white
      Your Repositories
    %ul.list-unstyled.pagination.repo_list
      - @repos.each do |repo|
        - next if repo.nil?
        %li
          - if !repo.nil? && added_to_repos(repo.name)
            .panel.panel-body.added-repo#new-repos
              .pull-left
                = repo.name
              .pull-right
                = link_to '-', repo_path(repo.name), method: :delete, class: 'btn btn-default btn-small minus-button'
          -else
            .panel.panel-body#new-repos
              .pull-left
                = repo.name
              .pull-right
                = link_to '+', {controller: "repos", action: "create", name: repo.name }, method: :post, class: "#{repo.name} btn btn-default btn-small"

